#
# wm independent hotkeys
#

# terminal emulator
super + Return
	urxvtc

# Rofi laucnher Drun
super + d
	rofi -show drun -modi drun -theme ~/.cache/wal/flat-red.rasi

# Rofi laucnher Drun
super + shift + d
    rofi -show run -theme ~/.cache/wal/flat-red.rasi

# Rofi window switcher
super + tab 
    rofi -show window -theme ~/.cache/wal/flat-red.rasi

# Rofi Power Menu
alt + e
    rofi-power

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd

#
# bspwm hotkeys
#

# quit bspwm normally
super + shift + q
	bspc quit

# close and kill
super + shift + c
	bspc node -{c}

# alternate between the tiled and monocle layout
super + m
	bspc desktop -l next

# send the newest marked node to the newest preselected node
super + y
	bspc node newest.marked.local -n newest.!automatic.local

# swap the current node and the biggest node
super + g
	bspc node -s biggest

#
# state/flags
#

# set the window state
super + {t,shift + t,s,f}
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# set the node flags
super + ctrl + {m,x,y,z}
	bspc node -g {marked,locked,sticky,private}

#
# focus/swap
#

# focus the node in the given direction
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

# focus the node for the given path jump
super + {p,b,comma,period}
	bspc node -f @{parent,brother,first,second}

# focus the next/previous node in the current desktop
super + {_,shift + }x
	bspc node -f {next,prev}.local

# focus the next/previous desktop in the current monitor
super + bracket{left,right}
	bspc desktop -f {prev,next}.local

# focus the last node/desktop
super + {grave,Tab}
	bspc {node,desktop} -f last

# focus the older or newer node in the focus history
super + {o,i}
	bspc wm -h off; \
	bspc node {older,newer} -f; \
	bspc wm -h on

# focus or send to the given desktop
super + {_,shift + }{1-8}
	bspc {desktop -f,node -d} focused:^{1-8}
	
#
# preselect
#

# Autopreselect (split window in its largest dimension)
alt + Return
	$HOME/.scripts/auto-presel

# preselect the direction
alt  + {h,j,k,l}
	bspc node -p {west,south,north,east}

# preselect the ratio
alt + {1-9}
	bspc node -o 0.{1-9}

# cancel the preselection for the focused node
alt + space
	bspc node -p cancel

# cancel the preselection for the focused desktop
super + ctrl + shift + space
	bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

#
# move/resize
#

# expand a window by moving one of its side outward
super + {Left,Down,Up,Right}
	bspc node -z {left -10 0,bottom 0 10,top 0 -10,right 10 0}

# contract a window by moving one of its side inward
super + alt + {Left,Down,Up,Right}
	bspc node -z {right -10 0,top 0 10,bottom 0 -10,left 10 0}

# move a floating window
super + shift + {Left,Down,Up,Right}
	bspc node -v {-10 0,0 10,0 -10,10 0}

# Rotate Windows
super + v
    bspc node @focused:/ --rotate 90
	

#
# custom hotkeys
#

# Screenshot Full
Print
    $HOME/.scripts/maim/screenshotfull.sh

# Screenshot Area
super + a
    $HOME/.scripts/maim/screenshotarea.sh

# Screenshot Window
super + ctrl + w
    $HOME/.scripts/maim/screenshotwindow.sh

# Lock Screen
alt + ctrl + l
    i3lock-fancy-dualmonitor -pf Roboto-Regular -- scrot -z

# Spotify / MPD Next Track
XF86AudioNext 
    sp next || mpc next

# Spotify / MPD Previous Track
XF86AudioPrev
    sp prev || mpc prev

# Spotify / MPD Play
XF86AudioPlay
    sp play || mpc toggle 

# Launch Vivaldi
super+q 
    vivaldi-snapshot

# Launch Pamac
XF86Tools
    pamac-manager

# Launch Telegram
XF86Mail 
    telegram-desktop

# Launch Calculator
XF86Calculator
    galculator

# Launch File Manager
XF86Explorer
    nemo

# Volume Raise
XF86AudioRaiseVolume 
    $HOME/.scripts/volumedunst.sh up

# Volume Down
XF86AudioLowerVolume 
    $HOME/.scripts/volumedunst.sh down

# Toggle Mute
XF86AudioMute
    $HOME/.scripts/volumedunst.sh mute

# Audio Sources List
XF86AudioStop
    rofi-pulse    
