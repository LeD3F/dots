!Xdefaults --

Xft.dpi: 96
Xft.antialias: true
Xft.hinting: true
Xft.rgba: rgb
Xft.autohint: true
Xft.hintstyle: hintslight
!hintmedium hintslight hintfull
Xft.lcdfilter: lcddefault

!URxvt ---------------------------------------------------------------------- !

!Fonts --

URxvt.font:xft:lemon:medium:pixelsize=8
URxvt.boldFont:
URxvt.italicfont:
URxvt.bolditalicFont:
URxvt.letterSpace: -1
URxvt.antialias: false

!Main Settings --

URxvt.termname: xterm-256color
URxvt.iconFile: /usr/share/icons/Papirus/48x48/apps/urxvt.svg

URxvt.cursorUnderline: true
URxvt.pointerBlank: true
URxvt.saveLines:    5000
URxvt.scrollBar:    false
URxvt.cursorBlink:  true
URxvt.urgentOnBell: true
URxvt*scrollTtyOutput: true
URxvt*scrollWithBuffer: true
URxvt*scrollTtyKeypress: true

!Extensions --

URxvt.perl-ext: default,clipboard,url-select,keyboard-select

!Tabs --

!URxvt.tabbed.tabbar-fg: 7
!URxvt.tabbed.tabbar-bg: 0
!URxvt.tabbed.tab-fg: 7
!URxvt.tabbed.tab-bg: 0

!URL Launcher --

URxvt.keysym.M-u: perl:url-select:select_next
URxvt.url-select.launcher: /usr/bin/xdg-open
URxvt.url-select.underline: true
URxvt.colorUL: #D9A9A2
URxvt.matcher.button: 1

!Disable iso14755 --

URxvt.iso14755: false
URxvt.iso14755_52: false

!Clipboard --

URxvt.keysym.Shift-Control-V: eval:paste_clipboard
URxvt.keysym.Shift-Control-C: eval:selection_to_clipboard

!Control + arrow navigation --

URxvt.keysym.Control-Up:\033[1;5A
URxvt.keysym.Control-Down:\033[1;5B
URxvt.keysym.Control-Left:\033[1;5D
URxvt.keysym.Control-Right:\033[1;5C

!URxvt window --

URxvt*geometry: 70x23
URxvt.internalBorder: 30
