border-bottom-color = #AD3D37

line-color = #f00
underline-size = 0
overline-size = 0

border-size = 0
border-color = #00000000

padding-left = 0
padding-right = 0

module-margin-left = 0
module-margin-right = 0

font-0 = erus erusfont:style=Regular:pixelsize=10;2
font-1 = FuraCode Nerd Font:style=Regular:size=10;2
font-2 = unifont:fontformat=truetype:size=8:antialias=false;0
font-3 = Wuncon Siji:pixelsize=10;2
font-4 = emojione:scale=10;1

modules-left = i3 mpd
modules-center = date
modules-right = spotify xkeyboard memory eth pulseaudio

wm-restack = i3

override-redirect = false

;scroll-up = i3wm-wsnext
;scroll-down = i3wm-wsprev

cursor-click = pointer
cursor-scroll = ns-resize

