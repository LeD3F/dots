!Xdefaults --
Xft.dpi: 96
Xft.antialias: true
Xft.hinting: true
Xft.rgba: rgb
Xft.autohint: false
Xft.hintstyle: hintslight
!hintmedium hintslight hintfull
Xft.lcdfilter: lcddefault
Xcursor.theme: Bibata-Modern-Ice
Xcursor.size: 24

!URxvt ---------------------------------------------------------------------- !

!Fonts --

URxvt.font: xft:Iosevka Nerd Font Mono:style=Regular:pixelsize=14
URxvt.boldFont: xft:Iosevka Nerd Font Mono:style=Bold:pixelsize=14
URxvt.italicFont: xft:Iosevka Nerd Font Mono:style=Regular Italic:pixelsize=14
URxvt.bolditalicFont: xft:Iosevka Nerd Font Mono:style=Bold Italic:pixelsize=14
URxvt.letterSpace: -1
URxvt.antialias: true

!Main Settings --

URxvt.termname: xterm-256color
URxvt.iconFile: /usr/share/icons/Papirus/48x48/apps/urxvt.svg

URxvt.perl-ext-common: ibeamcursor
URxvt.pointerBlank: true
URxvt.saveLines:    5000
URxvt.scrollBar:    false
URxvt.cursorBlink:  true
URxvt.urgentOnBell: false
URxvt.scrollTtyOutput: true
URxvt.scrollWithBuffer: true
URxvt.scrollTtyKeypress: true

!Extensions --

URxvt.perl-ext: default,clipboard,url-select,keyboard-select,vtwheel

!Tabs --

!URxvt.tabbed.tabbar-fg: 7
!URxvt.tabbed.tabbar-bg: 0
!URxvt.tabbed.tab-fg: 7
!URxvt.tabbed.tab-bg: 0

!URL Launcher --

URxvt.keysym.M-u: perl:url-select:select_next
URxvt.url-select.launcher: /usr/bin/xdg-open
URxvt.url-select.underline: true
URxvt.colorUL: #D9A9A2
URxvt.matcher.button: 1

!Disable iso14755 --

URxvt.iso14755: false
URxvt.iso14755_52: false

!Clipboard --

URxvt.keysym.Shift-Control-V: eval:paste_clipboard
URxvt.keysym.Shift-Control-C: eval:selection_to_clipboard
!Control + arrow navigation --

URxvt.keysym.Control-Up:\033[1;5A
URxvt.keysym.Control-Down:\033[1;5B
URxvt.keysym.Control-Left:\033[1;5D
URxvt.keysym.Control-Right:\033[1;5C

!URxvt window --

URxvt*geometry: 76x16
URxvt.internalBorder: 20
